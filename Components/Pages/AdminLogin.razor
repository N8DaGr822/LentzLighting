@page "/admin-login"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using LentzLighting.Models
@inject NavigationManager Navigation
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Admin Login - Lentz Lighting</PageTitle>
<HeadContent>
    <meta name="robots" content="noindex, nofollow" />
</HeadContent>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-icon">üîê</div>
            <h1>Admin Login</h1>
            <p>Enter your credentials to access the admin dashboard</p>
        </div>
        
        <div class="login-form">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }
            
            <div class="form-group">
                <label for="username">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    class="form-control @(showError ? "is-invalid" : "")" 
                    @bind-value="username" 
                    @bind-value:event="oninput"
                    @onkeyup="HandleKeyPress"
                    placeholder="Enter username"
                    autocomplete="username" />
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <div class="password-input">
                    <input 
                        type="@(showPassword ? "text" : "password")" 
                        id="password" 
                        class="form-control @(showError ? "is-invalid" : "")" 
                        @bind-value="password" 
                        @bind-value:event="oninput"
                        @onkeyup="HandleKeyPress"
                        placeholder="Enter password"
                        autocomplete="current-password" />
                    <button type="button" class="password-toggle" @onclick="TogglePassword">
                        @(showPassword ? "üôà" : "üëÅÔ∏è")
                    </button>
                </div>
            </div>
            
            <button class="btn btn-primary btn-lg login-btn" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Logging in...</span>
                }
                else
                {
                    <span>Login</span>
                }
            </button>
        </div>
        
        <div class="login-footer">
            <p>üîí Secure admin access for Lentz Lighting</p>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool showError = false;
    private bool isLoading = false;
    private bool showPassword = false;

    private async Task HandleLogin()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
            {
                ShowError("Please enter both username and password.");
                return;
            }

            isLoading = true;
            errorMessage = "";
            showError = false;
            StateHasChanged();

            // Find user by username or email
            var user = await UserManager.FindByNameAsync(username) 
                ?? await UserManager.FindByEmailAsync(username);

            if (user == null)
            {
                ShowError("Invalid username or password. Please try again.");
                password = "";
                isLoading = false;
                StateHasChanged();
                return;
            }

            // Attempt to sign in
            var result = await SignInManager.PasswordSignInAsync(
                user.UserName!, 
                password, 
                isPersistent: true, 
                lockoutOnFailure: true);

            if (result.Succeeded)
            {
                Navigation.NavigateTo("/admin");
            }
            else if (result.IsLockedOut)
            {
                ShowError("Account is locked out. Please try again later.");
                password = "";
            }
            else if (result.RequiresTwoFactor)
            {
                ShowError("Two-factor authentication is required.");
                password = "";
            }
            else
            {
                ShowError("Invalid username or password. Please try again.");
                password = "";
            }
        }
        catch (Exception ex)
        {
            ShowError($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _ = HandleLogin();
        }
    }

    private void TogglePassword()
    {
        showPassword = !showPassword;
    }

    private void ShowError(string message)
    {
        errorMessage = message;
        showError = true;
        StateHasChanged();
    }
} 